CREATE TABLE movies (
 	id serial PRIMARY KEY,
 	title VARCHAR(100),
	year VARCHAR(100),
	rating VARCHAR(100)
);

CREATE TABLE actors (
 	id serial PRIMARY KEY,
 	name VARCHAR(100),
	birthday VARCHAR(100),
	country VARCHAR(100),
	movie_id integer
);

CREATE TABLE directors (
 	id serial PRIMARY KEY,
 	name VARCHAR(100),
	birthday VARCHAR(100),
	country VARCHAR(100),
	actor_id integer
);

CREATE TABLE users (
 	id serial PRIMARY KEY,
 	username VARCHAR(100),
	password VARCHAR(100)
);